<Window x:Name="TMwindow" x:Class="Task_Progress_Bar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Progress_Bar"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None" Loaded="TMwindow_OnLoaded" Topmost="True"  ShowInTaskbar="False"
        Height="10" Width="800" Left="0" ResizeMode="NoResize"
        AllowsTransparency="True" Background="#00000000">
    <Grid x:Name="myGrid" HorizontalAlignment="Left" Height="10" Margin="0,0,0,0" VerticalAlignment="Top" Width="800">
        <ProgressBar x:Name="myProBar" HorizontalAlignment="Left" Height="4" Margin="0,6,0,0" VerticalAlignment="Top" Width="800" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
